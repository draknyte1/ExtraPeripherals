mon = peripheral.wrap("monitor_0")
printer = peripheral.wrap("printer_1")
mon.setTextScale(2.8)
mon.clear()
mon.setCursorPos(1, 1)
mon.write(" Welcome to the Poop Factory!")

function write()
  for i = 0, 100, 1 do
    printer.write("Poop!")
  end
end

while true do
  printer.newPage()
  printer.setPageTitle("Poop? Poop!")
  
  for i = 1, 100, 1 do
    write()
    printer.setCursorPos(1, i)
  end
  
  printer.endPage()
  sleep(0.001)
end
