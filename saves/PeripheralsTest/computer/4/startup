while true do
  --peripheral.call("top", "clear")
  peripheral.call("top", "setCursorPos", 1, 1)
  peripheral.call("top", "write", "Click to Shutdown")
  event, x, y = os.pullEvent("monitor_touch")
  for curCom = 0, 50, 1 do
    com = peripheral.wrap("computer_" .. curCom)
    print("computer_" .. curCom)
    if com ~= nil then
      if com.getID() ~= 1 then 
        print("Turning Computer " .. curCom .. " off")
        com.shutdown()
      end
    end
  end
  sleep(1)
end
